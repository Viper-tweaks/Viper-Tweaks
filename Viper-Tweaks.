<script>
// Buttons setup
const consoleBox = document.getElementById("console");
const buttons = {
    reduceProc: { el: document.getElementById("reduceProc"), state: false, key: 'a', name: "Reduce Processes" },
    reducePing: { el: document.getElementById("reducePing"), state: false, key: 'e', name: "Reduce Ping" },
    autoApply: { el: document.getElementById("autoApply"), state: false, name: "Auto Apply on Startup" },
    maxFPS: { el: document.getElementById("maxFPS"), state: false, name: "Max FPS Mode" },
    lowBG: { el: document.getElementById("lowBG"), state: false, name: "Lower Background Apps" },
    gameMode: { el: document.getElementById("gameMode"), state: false, name: "Game Mode Optimization" }
};

// Log function
function log(text){
    consoleBox.textContent += "\n" + text;
    consoleBox.scrollTop = consoleBox.scrollHeight;
}

// Toggle function
function toggleButton(btn){
    btn.state = !btn.state;
    btn.el.className = btn.state ? 'button-box on' : 'button-box off';
    log(`[SYSTEM] ${btn.name} ${btn.state ? 'ENABLED' : 'DISABLED'}`);
}

// Assign click events
for (let key in buttons){
    buttons[key].el.addEventListener('click', () => toggleButton(buttons[key]));
}

// Keyboard shortcuts
document.addEventListener('keydown', (e) => {
    for (let key in buttons){
        if(buttons[key].key && e.key.toLowerCase() === buttons[key].key){
            toggleButton(buttons[key]);
        }
    }
});

// Intro timer (7 seconds)
setTimeout(() => {
    document.getElementById("intro").style.display = "none";
    document.getElementById("main").style.display = "block";
}, 7000);
</script>

